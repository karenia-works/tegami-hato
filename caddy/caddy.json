{
    "admin": {
        "disabled": true
    },
    "apps": {
        "http": {
            "servers": {
                "default": {
                    "listen": [
                        "0.0.0.0:80",
                        "0.0.0.0:443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/api/*",
                                        "/connect/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "hato_server:80"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/var/www/hato",
                                    "pass_thru": true
                                }
                            ]
                        }
                    ],
                    "errors": {
                        "routes": [
                            {
                                "match": [
                                    {
                                        "path": [
                                            "*"
                                        ]
                                    }
                                ],
                                "handle": [
                                    {
                                        "handler": "static_response",
                                        "status_code": 400
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        }
    }
}
