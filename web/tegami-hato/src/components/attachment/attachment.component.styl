mat-icon {
    width: 24px;
    margin-right: 16px;
    color: var(--theme-text-header-color);
}

.attachment {
    min-width: 180px;
    max-width: 360px;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 8px 16px;
    border-radius: 4px;
    border: solid 2px var(--palette-base01);
    outline: 0;
    text-decoration: none;
    background-color: var(--theme-window-color);

    &:hover {
        text-decoration: underline;
    }
}

.info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    overflow:hidden; 
    
    & .filename {
        width: 100%;
        color: var(--theme-text-color);
        font-weight: bold;
        overflow:hidden; 
        text-overflow:ellipsis;
        white-space:nowrap;
    }

    & .size {
        color: var(--theme-text-info-color);
    }
}


