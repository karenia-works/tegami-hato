.searchAndFollow {
    display: flex;
    flex-direction: row;
}

.bar {
    width: 67%;
}

.btn_d {
    width: 33%;
    display: flex;
    flex-direction: row;

    .btn-follow {
        margin: 0 0 0 10%;
        width: 80%;
        align-self: center;
        justify-content: center;
        color: #ffffff;
        background-color: #DF6AF2;
    }

    .btn-cog {
        width: 18%;
    }
}

.btn-wide {
    width: 100%;
    margin: 20px 0 20px 0;
    padding: 20px 20px 20px 20px;
    color: var(--btn-bg-color, btn-default-bg-color);
    font-size: 25px;
    background-color: #FFFFFF;
    border-color: #DFCCE4;
    width: 100%;

    &:hover {
        color: #DF6AF2;
        background-color: #ffffff;
        border-color: #DF6AF2;
    }
}

.btn {
    justify-content: flex-start;
    align-items: flex-start;
}

.new {
    display: flex;
    flex-direction: row;
    margin-top: var(--theme-pad-03);
    padding: var(--theme-pad-02);
    font-size: var(--theme-size-h3);
    font-weight: bold;
}

.open_new {
    margin-top: var(--theme-pad-03);
}

.icon {
    padding-top: 2px;
    margin-right: 10px;
}

.title {
    font-size: var(--theme-size-h3);
    color: var(--theme-text-header-color);
    font-weight: bold;
}

.inside {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;

    .sub {
        display: flex;
        flex-direction: row;
        font-size: var(--theme-size-larger);
        color: var(--theme-text-info-color);
        margin: var(--theme-pad-03) 0;

        .from {
            margin-right: var(--theme-pad-03);
        }
    }

    .content {
        font-size: var(--theme-size-large);
        // justify-content: flex-start;
        // align-items: flex-start;
    }
}

.input {
    width: 99%;

    .search-box {
        justify-content: flex-start;
        flex-grow: 1;
        border-color: #FFFFFF;
        outline: none;
        border: 0; // 去除未选中状态边框
        box-shadow: none;
        font-size: 25px;
        color: #DF6AF2;
    }

    .content-box {
        margin-top: 20px;
        font-size: 20px;
        color: var(--btn-bg-color, btn-default-bg-color);
        height: 150px;
    }
}

.func_part {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;

    .a_area {
        display: flex;
        flex-direction: row;

        .label {
            font-size: 15px;
            margin: 0 5px 0 5px;
        }

        .a {
            font-size: 15px;
            text-decoration: none;
        }

        .reala {
            color: #DF6AF2;
        }
    }

    .btn_area {
        display: flex;
        flex-direction: row;
    }
}

.add_doc {
    color: var(--btn-bg-color, btn-default-bg-color);
    background-color: #FFFFFF;
    border-color: #FFFFFF;
    font-weight: bolder;
}

.send {
    color: #FFFFFF;
    background-color: var(--btn-bg-color, btn-default-bg-color);
    font-weight: bolder;
    border-color: var(--btn-bg-color, btn-default-bg-color);

    &:hover {
        color: var(--btn-bg-color, btn-default-bg-color);
        background-color: #FFFFFF;
        border-color: var(--btn-bg-color, btn-default-bg-color);
    }

    &:active {
        color: var(--btn-accent-color, btn-default-text-color);
        border-color: var(--btn-accent-color);
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
    }
}

.send {
    padding-right: 7px;
}

.line {
    margin-bottom: var(--theme-pad-03);
}
