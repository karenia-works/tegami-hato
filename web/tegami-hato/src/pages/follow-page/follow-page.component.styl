@lost flexbox flex;

.list {
    .line {
        display: flex;
        flex-direction: row;

        .name {
            lost-column: 5 / 6;
        }

        .op {
            lost-column: 1 / 6;
            align-items: center
        }
    }
}


.item_btn {
  color: var(--btn-border-color, btn-default-border-color);
  background-color: #FFFFFF;
  border-color: #DFCCE4;
  width: 100%;
  height: var(--theme-pad-08);
  margin: var(--theme-pad-04) 0 var(--theme-pad-04) 0;

  &:hover {
    color: #DF6AF2;
    background-color: #ffffff;
    border-color: #DF6AF2;
  }
}