.opr {
  display: flex;
  justify-content: space-between;
}

.btn-light {
  width: 160px;
  margin-left: 50px;
  min-width: 110px;
}

app-searchbar {
  width: 80%;
}

.list {
  margin-top: var(--theme-pad-05);
}

.channel {
    margin-bottom: var(--theme-pad-03);
}

.channel-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title {
  font-size: var(--theme-size-h3);
  color: var(--theme-text-header-color);
  font-weight: bold;
  margin-bottom: var(--theme-pad-03)
}

.message, .time{
  font-size: var(--theme-size-larger);
  color: var(--theme-text-info-color);

  & .sender {
    color: var(--theme-link-color);
  }
}

