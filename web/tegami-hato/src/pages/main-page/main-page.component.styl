.container {
    display: flex;
    min-height: 45vh;
}

.welcome {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    .title {
        margin: 0;
    }

    .info {
        font-weight: bold;
        color: var(--theme-info-color);
        margin-top: var(--theme-pad-01);  
        margin-bottom: var(--theme-pad-04);  
    }
}

app-searchbar {
    width: 50vw;
    max-width: 450px;
}

.pic_contain {
    z-index: 0;
    position: absolute;
    bottom: 0px;
    right: 0px;
    width: 70vw;
    height: 60vh;
    background-image: url("../../assets/background.svg")
    background-repeat: no-repeat;
    background-size: contain;
    background-position: right bottom ;
}