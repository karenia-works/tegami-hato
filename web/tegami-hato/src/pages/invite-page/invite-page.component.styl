.box {
        display: flex;
        flex-direction: column;
         align-items: center

    .invite_user {
        font-size: 15px;
        font-weight: bolder;
    }

    .sentence {
        font-size: 15px;
        display: flex;
        flex-direction: row;
        color: var(--theme-text-info-color);

        .group {
            font-size: 15px;
            color: var(--btn-accent-color);
        }
    }

    .btn_area {
        display: flex;
        flex-direction: row;
        width: 100%;
        justify-content: space-between;

        .btn-ok {
            width: 100%;
            margin: var(--theme-pad-03) var(--theme-pad-05) var(--theme-pad-03) var(--theme-pad-05);
        }

        .cancel {
            border-color: var(--btn-bg-color, btn-default-bg-color);
            color: var(--btn-bg-color, btn-default-bg-color);
        }
    }
}